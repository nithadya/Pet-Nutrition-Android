<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserSettingActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Full-screen Image -->

        <ImageView
            android:id="@+id/fullScreenImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:contentDescription="Background Image"
            android:scaleType="centerCrop"
            android:src="@drawable/profile2" />


        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-18dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/profile4" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageView15"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="-12dp"
                        android:elevation="3dp"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView14"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        android:src="@drawable/avatarimg" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/threed_user_field"
                    android:orientation="horizontal"
                    android:padding="9dp">

                    <ImageView
                        android:id="@+id/nameImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/nameicon" />

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/user_data_field"
                        android:enabled="false"
                        android:fontFamily="@font/font1medium"
                        android:hint="Name"
                        android:textColor="@color/black"
                        android:textColorHint="@color/green"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/threed_user_field"
                    android:orientation="horizontal"
                    android:padding="9dp">

                    <ImageView
                        android:id="@+id/emailImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/emailicon" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/user_data_field"
                        android:enabled="false"
                        android:fontFamily="@font/font1medium"
                        android:hint="Email"
                        android:textColor="@color/black"
                        android:textColorHint="@color/green"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/threed_user_field"
                    android:orientation="horizontal"
                    android:padding="9dp">

                    <ImageView
                        android:id="@+id/addressImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/addressicon" />

                    <EditText
                        android:id="@+id/editTextAddress"
                        android:layout_width="287dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/user_data_field"
                        android:enabled="false"
                        android:fontFamily="@font/font1medium"
                        android:hint="Address"
                        android:textColor="@color/black"
                        android:textColorHint="@color/green"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/threed_user_field"
                    android:orientation="horizontal"
                    android:padding="9dp">

                    <ImageView
                        android:id="@+id/userTypeImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/usericon" />

                    <EditText
                        android:id="@+id/editTextUserType"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/user_data_field"
                        android:enabled="false"
                        android:fontFamily="@font/font1medium"
                        android:hint="User Type"
                        android:textColor="@color/black"
                        android:textColorHint="@color/green"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonEdit"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/green_btn_background"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirm"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/green_btn_background"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>